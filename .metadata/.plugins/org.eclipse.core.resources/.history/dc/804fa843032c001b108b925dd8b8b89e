read_csv_array() {
    local -n csv_var=$1
    local path=$2
    local row=1
    declare -A -p csv_var >> /dev/null
    IFS=$'\n'
    for line in `cat $path`
    do
        local col=1
        for val in `echo $line | tr , "\n"`
        do
            csv_var[$row,$col]=$val
            let "col++"
        done
        let "row++"
    done
}